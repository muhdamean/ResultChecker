@page
@model ResultChecker.Pages.Admin.AddCourseLecturersModel
@{
    ViewBag.Title = "Add Course Lecturers";
}
<div class="row">
    <div class="col-sm-6">
        <h5 class="h5">Assign Course</h5>
        <form method="post">
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
                <label asp-for="CourseLecturers.UserId" class="col-form-label"></label>
                @Html.DropDownListFor(x => Model.CourseLecturers.UserId, new SelectList(Model.StaffList, "Value", "Text", ""), htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="CourseLecturers.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseLecturers.Session" class="col-form-label"></label>
                @Html.DropDownListFor(x => Model.CourseLecturers.Session, new SelectList(Model.SessionList, "Value", "Text", ""), htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="CourseLecturers.Session" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseLecturers.Course" class="col-form-label"></label>
                @Html.DropDownListFor(x => Model.CourseLecturers.Course, new SelectList(Model.SubjectList, "Value", "Text", ""), htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="CourseLecturers.Course" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-sm">Save</button>
            <a asp-page="CourseLecturers" class="btn btn-info btn-sm">Cancel</a>
        </form>
    </div>
</div>