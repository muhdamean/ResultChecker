@page
@model ResultChecker.Pages.Admin.AddCourseModel
@{
    ViewBag.Title = "Add Course";
}
<div class="row">
    <div class="col-sm-6">
        <h5 class="h5">Create New Course</h5>
        <form method="post">
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
                <label asp-for="Courses.CourseCode" class="col-form-label"></label>
                <input asp-for="Courses.CourseCode" class="form-control" placeholder="e.g: CSC101" />
                <span asp-validation-for="Courses.CourseCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courses.CourseTitle" class="col-form-label"></label>
                <input asp-for="Courses.CourseTitle" class="form-control" />
                <span asp-validation-for="Courses.CourseTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courses.CourseUnit" class="col-form-label"></label>
                <input asp-for="Courses.CourseUnit" class="form-control" type="number" />
                <span asp-validation-for="Courses.CourseUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courses.Semester" class="col-form-label"></label>
              
            <select class="form-control" asp-for="Courses.Semester">
                <option value="">Select Semester</option>
                <option value="First Semester">First Semester</option>
                <option value="Second Semester">Second Semester</option>
            </select>
                <span asp-validation-for="Courses.Semester" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Courses.CourseCode" class="col-form-label"></label>
                @Html.DropDownListFor(x => Model.Courses.CourseCode, new SelectList(Model.ClassList, "Value", "Text", ""), htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="Courses.CourseCode" class="text-danger"></span>
            </div>*@
            <div class="form-group" hidden>
                <label asp-for="Courses.IsActive" class="col-form-label"></label>
                <input asp-for="Courses.IsActive"  class="checkbox-default" />
                <span asp-validation-for="Courses.IsActive" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-sm">Save</button>
            <a asp-page="courses" class="btn btn-info btn-sm">Cancel</a>
        </form>
    </div>
</div>