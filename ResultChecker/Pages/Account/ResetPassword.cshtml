@page
@model ResultChecker.Pages.Account.ResetPasswordModel
@{
    ViewBag.Title = "Reset Password";
}

<div class="col-sm-4 col-md-4 offset-sm-4 pull-sm-4">
    <h5>Reset Password</h5>
    <form method="post" class="mt-2">
        <div class="form-group row" hidden>
            <input asp-for="Email" readonly class="form-control" />
            <input asp-for="Token" readonly class="form-control" />
        </div>
        @*<div class="form-group row">
                <label asp-for="CurrentPassword" class="col-form-label "></label>
                    <input asp-for="CurrentPassword" class="form-control" />
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>*@
        <div class="form-group row">
            <label asp-for="NewPassword" class="col-form-label "></label>
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="ConfirmPassword" class="col-form-label "></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <button type="submit" class="btn btn-primary btn-sm mr-1">Reset Password</button>
            <a asp-page="./index" class="btn btn-warning btn-sm">Cancel</a>
        </div>
    </form>
</div>