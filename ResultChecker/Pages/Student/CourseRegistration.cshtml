@page
@model ResultChecker.Pages.Student.CourseRegistrationModel
@{
    ViewBag.Title = "Course Registration";
}

@if (TempData["message"] != null)
{
    <div classs="container p-0 ">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
}
<div class="card">
    <div class="card-block">
        <div class="row">
            <div class="col-sm-6">
                <h5 class="h5">Course Registration</h5>
                <form method="post">
                    <div class="form-group">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <label asp-for="CourseRegs.Session" class="col-form-label"></label>
                        @Html.DropDownListFor(x => Model.CourseRegs.Session, new SelectList(Model.SessionList, "Value", "Text", ""), htmlAttributes: new { @class = "form-control" })
                        <span asp-validation-for="CourseRegs.Session" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CourseRegs.Semester" class="col-form-label"></label>
                        @Html.DropDownListFor(x => Model.CourseRegs.Semester, new SelectList(Model.SemesterList, "Value", "Text", ""), htmlAttributes: new { @class = "form-control" })
                        <span asp-validation-for="CourseRegs.Semester" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CourseRegs.CourseCode" class="col-form-label"></label>
                        @Html.DropDownListFor(x => Model.CourseRegs.CourseCode, new SelectList(Model.CourseList, "Value", "Text", ""), htmlAttributes: new { @class = "form-control" })
                        <span asp-validation-for="CourseRegs.CourseCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CourseRegs.Year" class="col-form-label"></label>
                        <input asp-for="CourseRegs.Year" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm">Save</button>
                    <a asp-page="CourseLecturers" class="btn btn-info btn-sm">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>