                </div>
            </div>
            @*<div class="form-group row">
                <label asp-for="ApplicationUsers.Religion" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <select asp-for="ApplicationUsers.Religion" class="form-control">
                        <option value="">Select Religion</option>
                        <option value="Islam">Islam</option>
                        <option value="Christianity">Christianity</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="ApplicationUsers.Religion" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ApplicationUsers.Tribe" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ApplicationUsers.Tribe" class="form-control" />
                    <span asp-validation-for="ApplicationUsers.Tribe" class="text-danger"></span>
                </div>
            </div>*@
            <div class="form-group row">
                <label asp-for="ApplicationUsers.Qualification" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ApplicationUsers.Qualification" class="form-control" />
                    <span asp-validation-for="ApplicationUsers.Qualification" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ApplicationUsers.Department" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ApplicationUsers.Department" class="form-control" />
                    <span asp-validation-for="ApplicationUsers.Department" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ApplicationUsers.State" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    @*<input asp-for="State" class="form-control" />*@
                    @Html.DropDownListFor(x => Model.ApplicationUsers.State, new SelectList(Model.StateList, "Value", "Text", ""), htmlAttributes: new { @class = "form-control", id = "State" })
                    <span asp-validation-for="ApplicationUsers.State" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ApplicationUsers.LGA" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <select asp-for="ApplicationUsers.LGA" asp-items="Model.LgaList" class="form-control" id="lga">
