                    <input asp-for="ApplicationUsers.Email" class="form-control" />
                    <span asp-validation-for="ApplicationUsers.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ApplicationUsers.FirstName" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ApplicationUsers.FirstName" class="form-control" />
                    <span asp-validation-for="ApplicationUsers.FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ApplicationUsers.LastName" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ApplicationUsers.LastName" class="form-control" />
                    <span asp-validation-for="ApplicationUsers.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ApplicationUsers.MiddleName" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ApplicationUsers.MiddleName" class="form-control" />
                    <span asp-validation-for="ApplicationUsers.MiddleName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ApplicationUsers.PhoneNumber" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ApplicationUsers.PhoneNumber" class="form-control" />
                    <span asp-validation-for="ApplicationUsers.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ApplicationUsers.DOB" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ApplicationUsers.DOB" class="form-control" />
                    <span asp-validation-for="ApplicationUsers.DOB" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
