@model ResultChecker.Pages.Student.AddStudentModel
@{
    ViewBag.Title = "Add Student";
}
<div class="row">
    <div class="col-sm-8">
        <h5 class="h5">Add New Student</h5>
        <form method="post" enctype="multipart/form-data" class="mt-2">
            <div class="form-group row">
