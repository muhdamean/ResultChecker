                    <span asp-validation-for="ApplicationUsers.LGA" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ApplicationUsers.Address" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ApplicationUsers.Address" class="form-control" />
                    <span asp-validation-for="ApplicationUsers.Address" class="text-danger"></span>
                </div>
            </div>
          
            <div class="form-group row">
                <label asp-for="ApplicationUsers.Hobbies" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ApplicationUsers.Hobbies" class="form-control" />
                    <span asp-validation-for="ApplicationUsers.Hobbies" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ApplicationUsers.NOKName" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ApplicationUsers.NOKName" class="form-control" />
                    <span asp-validation-for="ApplicationUsers.NOKName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ApplicationUsers.NOKPhone" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ApplicationUsers.NOKPhone" class="form-control" />
                    <span asp-validation-for="ApplicationUsers.NOKPhone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ApplicationUsers.NOKAddress" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ApplicationUsers.NOKAddress" class="form-control" />
                    <span asp-validation-for="ApplicationUsers.NOKAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ApplicationUsers.PassportPhoto" class="col-form-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ApplicationUsers.PassportPhoto" accept="image/*" class="form-control" />
                    <span asp-validation-for="ApplicationUsers.PassportPhoto" class="text-danger"></span>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-sm-10 offset-2">
                    <button type="submit" class="btn btn-primary btn-sm">Save</button>
                    <a asp-page="/student/index" class="btn btn-warning btn-sm">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @*<script src="~/js/custom-script.js"></script>*@
    <script>
    $(document).ready(function () {
        var state = $("#State");
        var lga = $("#lga");
        lga.prop('disabled', true);

        state.change(function () {
            if ($(this).val() == "") {
                lga.append($('<option>', { value: '', text: '---- Select LGA ----' }, '</option>'));
                lga.prop('disabled', true);
                lga.val("");
            }
            else {
                $.getJSON("/GetLga", { state: $(this).val() }, function (data) {
                    lga.prop('disabled', false);
                    lga.empty();
                    lga.append($('<option>', { value: '0', text: '---- Select LGA ----' }, '</option>'));
                    $.each(data, function (index, lgas) {
                        lga.append($('<option/>',
                            {
                                value: lgas.value,
                                text: lgas.text,
                            }));
                    });
                });
            }
        });
    });
    </script>
}